@startuml 

hide footbox

participant A as ":client"
participant B as ":Caissier"
participant C as ":Caisse"

A -> B: arrive
activate B

participant Tapis as "Tapis"

A -> Tapis: déposer

activate Tapis

loop "Pour chaque article a"
    B -> Tapis: PrendreArticle
    B-> C: Scan(a)
    activate C
    
    
    participant Article as ":Article"
    
    par
    C-->Article:getPrix(a)
    C-->Article:getLibellé(a)

    end

    
    else
    opt "qté>1"
        B->C: saisir(Qté)
    end

    C-->A:Prix
    C-->A: Libellé
    C-->B:Prix
    C-->B: Libellé
end

B -> C:Fin

    c-->A:montant
    c-->B:montant




@enduml 
