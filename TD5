@startuml 

hide footbox

participant A as ":client"
participant B as ":Caissier"
participant C as ":Caisse"

A -> B: arrive

participant Tapis as "Tapis"

A -> Tapis: déposer

activate Tapis

loop "Pour chaque article"
    B -> Tapis: PrendreArticle
    B-> C: Scan
    activate C

    opt "qté>1"
        B->C: saisir(Qté)
    end

end
participant Article as ":Article"

@enduml 
